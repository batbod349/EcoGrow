{% extends 'base.html.twig' %}

{% block title %}Challenges
{% endblock %}

{% block body %}
{% include 'components/headers/pageHeader.html.twig' with {
                'title': 'Challenge',
				'image_path': asset('/images/icons/Quete.svg')
            } %}
	<div class="flex flex-col">
		<div class="container-page">
			<section class="section-container">
				<h2 class="font-rawles text-3xl">Quotidien</h2>
				<div class="space-y-4">
					{% for dailyQuest in dailyQuests %}
						{% include 'components/cards/challengeCard.html.twig' with {
                            'number': dailyQuest.rewards,
                            'title': dailyQuest.Name,
                    } %}
					{% else %}
						Aucun challenge quotidien n'a été trouvé.
					{% endfor %}
				</div>
			</section>
			<section class="section-container">
				<h2 class="font-rawles text-3xl">Les gros challenges</h2>
				<div class="space-y-4">
					{% for monthlyQuest in monthlyQuests %}
						{% include 'components/cards/challengeCard.html.twig' with {
                            'number': monthlyQuest.rewards,
                            'title': monthlyQuest.Name,
                    } %}
					{% else %}
						Aucun challenge mensuel n'a été trouvé.
					{% endfor %}
				</div>
			</section>
		</div>
	</div>
{% endblock %}
