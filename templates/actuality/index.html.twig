{% extends 'base.html.twig' %}

{% block title %}Hello ActualityController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% include 'components/headers/pageHeader.html.twig' with {
                'title': 'Actualites',
            } %}

		<ul>
			<h3 class="font-inter text-lg pb-10">Derniers articles :</h3>

			<div class="space-y-5">
				{% for article in articles %}
					{% include 'components/cards/actualite.html.twig' with {
                'image': article.getImage,
                'image_alt': article.name,
                'title': article.name,
                'subtitle': article.text,
                'description': article.text,
            } %}
				{% else %}
					Aucun article n'a été trouvé.
				{% endfor %}
			</ul>
		</div>
	</div>
{% endblock %}

