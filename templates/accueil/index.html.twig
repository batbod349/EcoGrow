{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!
{% endblock %}
{% block header %}
	{% include 'components/navigation/infoBar.html.twig' %}
{% endblock %}
{% block body %}
	<div class="flex flex-col">
		<div class="container-page">
			<section class="section-container">
				<h2 class="font-rawles text-3xl">Aujourd'hui</h2>
				<div class="space-y-4">
            {% for challenge in challenges %}
					{% include 'components/cards/challengeCard.html.twig' with {
                'number': "1234",
                'title': challenge.name,
                'desc': challenge.Text,
            } %}
            {% for article in articles %}
					{% include 'components/cards/actualite.html.twig' with {
                'image': article.getImage,
                'image_alt': article.name,
                'title': article.name,
                'subtitle': article.text,
                'description': article.text,
            } %}
				{% else %}
					Aucun article n'a été trouvé.
				{% endfor %}
				</div>
			</section>
			<section class="section-container">
				<h2 class="font-rawles text-3xl">En bref</h2>
				<div class="flex flex-wrap space-x-3">
					{% include 'components/cards/statCardLittle.html.twig' with{
                    'Amis':"Amis",
                    'rang':"rang",
                    'background':"bg-greenMint",} %}
					{% include 'components/cards/statCardLittle.html.twig' with{
                    'Amis':"Amis",
                    'rang':"rang",
                    'background':"bg-greenMint",} %}
					{% include 'components/cards/statCardLittle.html.twig' with{
                    'Amis':"Amis",
                    'rang':"rang",
                    'background':"bg-greenMint",} %}
				</div>
			</section>
			<section class="section-container">
				<h2 class="font-rawles text-3xl">Je veux participer</h2>
				<div class="space-y-4">
					{% include 'components/cards/challengeCard.html.twig' with {
                'number': "1234",
                'title': "Mon titre",
            } %}
				</div>
			</section>
		</div>
	</div>
{% endblock %}
