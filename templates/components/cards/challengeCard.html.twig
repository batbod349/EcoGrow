{% set title = title|default('Name-Challenge') %}
{% set desc = desc|default('Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed orci dui, volutpat sed') %}
{% set number = number|default('') %}

<div class="border-2 rounded-2xl border-greenDark w-96 p-2 relative">
	<div
		class="absolute top-2 right-2" onclick="toggleDescription()">
		<!-- Icône visible lorsque la description est affichée -->
		<span id="icon-up" style="display: block;">
			{% include 'components/containers/iconRounded/iconRoundedUp.html.twig' %}
		</span>
		<!-- Icône visible lorsque la description est cachée -->
		<span id="icon-down" style="display: none;">
			{% include 'components/containers/iconRounded/iconRoundedDown.html.twig' %}
		</span>
	</div>
	<div class="flex my-4 space-x-4">
		<div>
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
				<path stroke-linecap="round" stroke-linejoin="round" d="M9.879 7.519c1.171-1.025 3.071-1.025 4.242 0 1.172 1.025 1.172 2.687 0 3.712-.203.179-.43.326-.67.442-.745.361-1.45.999-1.45 1.827v.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 5.25h.008v.008H12v-.008Z"/>
			</svg>
		</div>
		<div class="space-y-2">
			<div class="flex">
				<h3>{{ title }}</h3>
				<!-- Conteneur du compteur (à côté du titre) qui sera masqué/affiché dynamiquement -->
				<span id="counter-next-to-title" class="inline-block ml-2" style="display: none;">
					{% include 'components/containers/graineCompteur.html.twig' with {
                        'number': number,
                    } %}
				</span>
			</div>
			<!-- Description avec un ID pour basculer sa visibilité -->
			<p id="description">{{ desc }}</p>
		</div>
	</div>
	<!-- Conteneur du compteur en bas (initialement visible) -->
	<div class="flex justify-self-end" id="bottom-counter">
		{% include 'components/containers/graineCompteur.html.twig' with {
            'number': number,
        } %}
	</div>
</div>

<script>
	function toggleDescription() {
const description = document.getElementById("description");
const counterNextToTitle = document.getElementById("counter-next-to-title");
const bottomCounter = document.getElementById("bottom-counter");
const iconUp = document.getElementById("icon-up");
const iconDown = document.getElementById("icon-down");

// Toggle entre afficher/masquer la description
if (description.style.display === "none") {
description.style.display = "block";
// Afficher le compteur en bas et masquer celui à côté du titre
bottomCounter.style.display = "flex";
counterNextToTitle.style.display = "none";
// Afficher l'icône "up" et masquer l'icône "down"
iconUp.style.display = "block";
iconDown.style.display = "none";
} else {
description.style.display = "none";
// Masquer le compteur en bas et afficher celui à côté du titre
bottomCounter.style.display = "none";
counterNextToTitle.style.display = "inline-block";
// Afficher l'icône "down" et masquer l'icône "up"
iconUp.style.display = "none";
iconDown.style.display = "block";
}
}

// Assurez-vous que la description est visible par défaut
document.getElementById("description").style.display = "block";
</script>
